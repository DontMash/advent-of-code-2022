{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "run",
      "group": "build",
      "problemMatcher": ["$rustc"],
      "label": "rust: cargo run",
      "args": ["${input:challengeIndex}"]
    }
  ],
  "inputs": [
    {
      "id": "challengeIndex",
      "description": "Select the challenge to be solved.",
      "type": "pickString",
      "options": [
        { "label": "Day", "value": "1" },
        { "label": "Day", "value": "2" },
        { "label": "Day", "value": "3" },
        { "label": "Day", "value": "4" },
        { "label": "Day", "value": "5" },
        { "label": "Day", "value": "6" }
      ]
    }
  ]
}
